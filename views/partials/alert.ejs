<div class="my-2">
    <% if (flashMessage.success) { %>
    <div
        style="min-width: 100%"
        class="position-absolute sticky-top alert alert-success alert-dismissible fade show my-2"
    >
        <%= flashMessage.success %>
        <button class="close" data-dismiss="alert" aria-label="">
            <span aria-hidden="true"> &times; </span>
        </button>
    </div>
    <% } %> <% if (flashMessage.fail) { %>
    <div
        style="min-width: 100%"
        class="position-absolute sticky-top alert alert-danger alert-dismissible fade show my-2"
    >
        <%= flashMessage.fail %>
        <button class="close" data-dismiss="alert" aria-label="">
            <span aria-hidden="true"> &times; </span>
        </button>
    </div>
    <% } %>
</div>
