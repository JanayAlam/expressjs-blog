<%- include('../../partials/header.ejs') %> 
<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-sm-10 offset-sm-1">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center my-2">Login to your account</h4>
                </div>
                <div class="card-body">
                    <form action="/auth/login" method="POST">
                        <div class="form-group">
                            <label for="email">
                                Email Address
                            </label>
                            <input type="email" name="email" id="email" placeholder="address@domain.com" class="form-control <%- error.email ? "is-invalid" : "" %>" value="<%= value.email ? value.email : "" %>">
                            <div class="invalid-feedback">
                                <%= error.email %> 
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password
                            </label>
                            <input type="password" name="password" id="password" placeholder="Password" class="form-control <%- error.password ? "is-invalid" : "" %>" value="<%= value.password ? value.password : "" %>">
                            <div class="invalid-feedback">
                                <%= error.password %> 
                            </div>
                        </div>
                        <input type="submit" value="Submit" class="btn btn-primary">
                    </form>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-center" href="/auth/signup">New around here? Sign up</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
</body>
</html>
